---
import Layout from '@layouts/Layout.astro';
import PageHeader from '@components/PageHeader.astro';
import { type Registry } from '@models/registry';
import { type BreadcrumbItem } from '@components/BreadcrumbMenu.astro';

type Props = {
  pageTitle: string;
  parliamentPeriod?: Registry;
  breadcrumbItems?: BreadcrumbItem[];
};

const { pageTitle, parliamentPeriod, breadcrumbItems } = Astro.props as Props;
---

<Layout parliamentPeriod={parliamentPeriod}>
  <Fragment slot="srw-meta-tags">
    <slot name="srw-meta-tags" />
  </Fragment>

  <PageHeader pageTitle={pageTitle} breadcrumbItems={breadcrumbItems} />

  <slot name="sub-page-header" />

  <div class="pt-4">
    <slot />
  </div>
</Layout>
